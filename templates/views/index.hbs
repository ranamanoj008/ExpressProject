<!DOCTYPE html>
<html lang="en">
<head>
    {{>headerlinks}}
</head>
<body>
      <!-- navbar -->
        {{>navbar}}
        <!-- body -->

            <div class="container-fluid" >
                <div class="row">
                    <div class="col-md-10 col-12 main_body mx-auto">
                        <div class="row">
                            <!-- left -->
                            <div class="col-md-6 col-12  main_body_left ml-auto">
                                <p>Welcome to weather app</p>
                                <h1>Get The Latest <span class="span_tag">Weather</span> Info Of Your City</h1>
                                <a href="/weather"><button>Check now</button></a>
                            </div>
                            <!-- right -->
                            <div class="col-md-6 col-12 main_body_right align-items-center ml-auto">
                                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                                    <div class="carousel-inner">
                                      <div class="carousel-item active">
                                        <img class="w-100" src="images/w1.jpg" alt="First slide">
                                      </div>
                                      <div class="carousel-item">
                                        <img class="w-100" src="images/w2.jpg" alt="Second slide">
                                      </div>
                                      <div class="carousel-item">
                                        <img class="w-100" src="images/w3.jpg" alt="Third slide">
                                      </div>
                                        <div class="carousel-item">
                                        <img class="w-100" src="images/w4.jpg" alt="Third slide">
                                      </div>
                                    </div>
                                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                                      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                      <span class="sr-only">Previous</span>
                                    </a>
                                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                                      <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                      <span class="sr-only">Next</span>
                                    </a>
                                  </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- footer -->

          {{>footer}}

</body>
</html>